<div class="container">

  <div class="row my-5">

    <div class="col-lg-3">
      <table>
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= link_to genre.name, items_path(genre_id: genre.id) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-lg-9">
      <h5>
        <% if params[:genre_id].present? %>
        <strong><%= @genre.name %>：一覧</strong><span>(全<%= @items.count %>件)</span>
        <% else %>
        <strong>商品一覧</strong><span>(全<%= @items.count %>件)</span>
        <% end %>
      </h5>
          <div class="row">
            
            <% @items.each do |item| %>
            <div class="col-lg-3 d-flex flex-wrap">
            <table class="table table-borderless">
              <tr>
                <th class="align-bottom">
                  <%= link_to item_path(item) do %>
                  <%= image_tag item.get_item_image(200,200) %>
                  <% end %>
                </th>
              </tr>
              <tr>
                <th class="align-bottom">
                  <%= item.name %>
                </th>
              </tr>
              <tr>
                <th class="align-bottom">
                  ￥<%= item.price %>
                </th>
              </tr>
            </table>
          </div>
          <% end %>
         
        </div>
      <%# if params[:item_name].nil? %>
      <%#= paginate @items, class: "mt-2 mx-auto" %>
      <%# end %>
    </div>

  </div>

</div>