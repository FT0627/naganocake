<div class="container">
  <h5 class="my-3">注文情報確認</h5>
  <div class="row mt-3">
    <div class="col-lg-8 d-flex align-items-start">
    <table class="table table-bordered">
      <thead>
      　<tr>
         <th>商品名</th>
      　 <th>単価(税込)</th>
      　 <th>数量</th>
      　 <th>小計</th>
      　</tr>
      </thead>
      <tbody>
        <% total = 0 %>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= image_tag cart_item.item.get_item_image(100,100) %>
            <%= cart_item.item.name %>
          </td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal %></td>
        </tr>
        <% total += cart_item.subtotal %>
        <% end %>
      </tbody>
    </table>
    </div>
    <div class="col-lg-3 ml-1 d-flex align-items-start">
    <table class="table table-bordered">
      <tr>
        <th>送料</th>
        <td>800</td>
      </tr>
      <tr>
        <th>商品合計</th>
        <td><%= total %></td>
      </tr>
      <tr>
        <td>請求金額</td>
        <td><%= total + 800 %></td>
      </tr>
    </table>
    </div>
  </div>
    <div class="row">
      <table class="table table-borderless my-2">
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>お届け先</th>
          <td><%= @order.full_address %></td>
        </tr>
      </table>
    </div>
    <div class="d-flex justify-content-center">
    <%= form_with model: @new_order, url: orders_path do |f| %>
      <%= f.hidden_field :customer_id, value: current_customer.id %>
      <%= f.hidden_field :payment_method, value: @new_order.payment_method %>
      <%= f.hidden_field :postage, value: 800 %>
      <%= f.hidden_field :postal_code, value: @new_order.postal_code %>
      <%= f.hidden_field :total_price, value: total + 800 %>
      <%= f.hidden_field :address, value: @new_order.address %>
      <%= f.hidden_field :name, value: @new_order.name %>
      <%= f.hidden_field :status, value: "waiting_for_payment" %>
      <%= f.submit "注文を確定する", class: "btn btn-success" %>
    <% end %>
    </div>
</div>