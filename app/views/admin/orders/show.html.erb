<div class="container">
  <h5 class="mx-5 my-3">注文履歴詳細</h5>
  <div class="row mb-3">
    <table class="table table-borderless">
      <tr>
        <th>購入者</th>
        <td><%= @order.customer.last_name %><%= @order.customer.first_name %></td>
      </tr>
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>〒<%= @order.postal_code %><%= @order.address %>
              <%= @order.name %>
        </td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td>
          <%= form_with model: @order, url: admin_order_path(@order) do |f| %>
          <%= f.select :status, Order.statuses_i18n.invert %>
          <%= f.submit "更新", class: 'btn btn-success' %>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
  <div class="row mx-2">
    <div class="col-lg-7">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_items.each do |order_item| %>
          <tr>
            <td><%= order_item.item.name %></td>
            <td><%= order_item.tax_price %></td>
            <td><%= order_item.amount %></td>
            <td>
              <%= order_item.tax_price * order_item.amount %>
            </td>
            <td>
              <%= form_with model: order_item, url: admin_order_item_path(order_item.item) do |f| %>
              <%= f.select :status, OrderItem.statuses_i18n.invert %>
              <%= f.submit "更新", class: 'btn btn-success' %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>