<div class="container">
  <div class="m-3 row d-flex justify-content-between">
    <p5><strong>商品一覧</strong></p5>
    <%= link_to "商品登録", new_admin_item_path, class: "btn btn-primary" %>
  </div>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td>
             <% if item.is_sold_out == false %>
             販売中
             <% else %>
             販売停止中
             <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <%= paginate @items, class: "mt-2 mx-auto" %>
</div>