<div class="container">
  <h5><strong>商品詳細</strong></h5>
  <div class="row mt-5 justify-content-center">
    <div class="col-sm-4">
       <p class="my-3 ml-4"><%= image_tag @item.get_item_image(100, 100) %></p>
    </div>
    <div class="col-sm-7 offset-ms-1">
       <table class="table table-bordered">
         <tr>
           <th>商品名</th>
           <td><%= @item.name %></td>
         </tr>
         <tr>
           <th>商品説明</th>
           <td><%= @item.introduction %></td>
         </tr>
         <tr>
           <th>税込価格 (税抜価格)</th>
           <td><%= @item.price * 1.1 %>円 (<%= @item.price %>円)</td>
         </tr>
         <tr>
           <th>販売ステータス</th>
           <td>
             <% if @item.is_sold_out == false %>
             販売中
             <% else %>
             販売停止中
             <% end %>
           </td>
         </tr>
       </table>
       <%= link_to '編集する', edit_admin_item_path(@item), class: 'ml-5 btn btn-success' %>
    </div>
  </div>
</div>
